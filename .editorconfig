# Editorconfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
tab_width = 4
indent_size = 4
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*{sh,bash,command}]
end_of_line = lf

[{LICENSE,LICENCE}]
max_line_length = 80
